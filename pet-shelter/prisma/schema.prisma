generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  isAdmin   Boolean
  createdAt DateTime @default(now())
}

model Pet {
  id         String    @id @default(cuid())
  name       String
  species    String
  age        String
  skills     String[]
  imageUrl   String?
  isFeatured Boolean   @default(false)
  category   Category? @relation(fields: [catSlug], references: [slug])
  catSlug    String?
}

model Category {
  id          String @id @default(cuid())
  name        String
  description String
  pets        Pet[]
  slug        String @unique
}

model Post {
  id          String   @id @default(cuid())
  name        String
  description String
  imageUrl    String
  createdAt   DateTime @default(now())
}
